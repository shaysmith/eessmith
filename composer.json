{
    "name": "acquia/eessmith",
    "description": "Composer build of my employee site.",
    "type": "project",
    "license": "GPL-2.0+",
    "require": {
    "composer/installers": "^1.0.21",
    "cweagans/composer-patches": "^1.6.0",
    "wikimedia/composer-merge-plugin": "^1.3",
    "drupal/core": "^8.6",
    "drupal/stage_file_proxy": "^1.0",
    "drupal-composer/drupal-scaffold":"^2.0.0",
    "drupal/google_analytics": "^2.0",
    "drupal/head2head": "^1.0",
    "drupal/acquia_connector": "^1.7",
    "drupal/youtube": "^1.0",
    "drupal/bootstrap": "^3.0",
        "drush/drush": "^9.6"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
    	"vendor-dir": "vendor"
  	},
    "extra": {
        "_readme": [
            "By default Drupal loads the autoloader from ./vendor/autoload.php.",
            "To change the autoloader you can edit ./autoload.php."
        ],

		"installer-paths": {
            "docroot/core": ["type:drupal-core"],
			"docroot/modules/contrib/{$name}/": ["type:drupal-module"],
			"docroot/themes/{$name}/": ["type:drupal-theme"],
			"docroot/libraries/{$name}/": ["type:drupal-library"],
			"docroot/profiles/contrib/{$name}/": ["type:drupal-profile"],
			"docroot/modules/custom/{$name}/": ["type:drupal-module-custom"]
		},
        
        "merge-plugin": {
            "include": [
                "docroot/core/composer.json"
            ],
            "recurse": false,
            "replace": false,
            "merge-extra": false
        },
        "drupal-scaffold": {
      		"excludes": [
        		".htaccess",
        		"robots.txt",
        		"themes/bootstrap_clean_blog"
      		]
    	}
    },
    
    "scripts": {
        "post-install-cmd": [
            "@composer drupal-scaffold",
            "find docroot vendor -name '.git' | xargs rm -rf"
        ],
        "post-update-cmd": [
            "@composer drupal-scaffold",
            "find docroot vendor -name '.git' | xargs rm -rf"
        ],
        "drupal-scaffold": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
        ]
    },
    
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    }
}
